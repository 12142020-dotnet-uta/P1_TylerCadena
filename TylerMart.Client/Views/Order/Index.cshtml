@{
	ViewData["Title"] = "Locations";
}

@model System.Collections.Generic.List<TylerMart.Domain.Models.Location>

<h1>Locations</h1><hr>

<div class="row">
	<div class="col-lg-12">
		<a asp-controller="Customer" asp-action="Index" class="btn btn-primary">Back</a><br><br>
	</div>
</div>

<div class="row">
	@foreach (var l in @Model) {
		<div class="col-lg-12">
			<p>@l.Name</p>
			<a asp-controller="Order" asp-action="Location" asp-route-ID="@l.ID" class="btn btn-sm btn-info">Make Order</a>
			<a asp-controller="Order" asp-action="History" asp-route-ID="@l.ID" class="btn btn-sm btn-info">Order History</a><br><br>
		</div>
	}
</div>
