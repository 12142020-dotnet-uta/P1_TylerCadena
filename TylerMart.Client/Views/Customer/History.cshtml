@{
	ViewData["Title"] = "Customer History";
}

@model System.Collections.Generic.List<TylerMart.Domain.Models.Order>

<div class="text-center">
	@if (ViewBag.Name != null) {
		<h1 class="display-4">Welcome, @ViewBag.Name!</h1><hr>
	}
</div>

<div class="row">
	<table class="table">
		<thead>
			<tr>
				<th>Created At:</th>
				<th>Completed:</th>
				<th>Customer:</th>
				<th>Location:</th>
				<th>Products:</th>
				<th>Price:</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var o in @Model) {
				<tr>
					<td>@o.CreatedAt</td>
					<td>@o.Complete</td>
					<td>@o.Customer.FirstName @o.Customer.LastName</td>
					<td>@o.Location.Name</td>
					<td>
						<ul>
							@foreach (var op in @o.OrderProducts) {
								<li>@op.Product.Name</li>
							}
						</ul>
					</td>
					<td>@o.OrderProducts.Sum(op => op.Product.Price)</td>
				</tr>
			}
		</tbody>
	</table>
</div>

<div>
	<a asp-controller="Customer" asp-action="Index" class="btn btn-primary">Back</a>
</div>
